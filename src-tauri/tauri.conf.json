{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "S3Deck",
  "version": "0.1.0",
  "identifier": "com.adudek4.s3deck",
  "build": {
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build && cd src-tauri/go-backend && ./build.sh",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "S3Deck",
        "width": 800,
        "height": 600,
        "dragDropEnabled": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "resources": [
      "go-backend/s3deck-backend*"
    ]
  }
}
